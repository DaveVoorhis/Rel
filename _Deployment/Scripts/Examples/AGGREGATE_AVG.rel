OPERATOR AGGREGATE_AVERAGE(data RELATION {AGGREGAND INTEGER, AGGREGATION_SERIAL INTEGER}) RETURNS RATIONAL;
	// no initialisation per se
	RETURN WITH (
		// aggregation
		mean := AGGREGATE(data, AGGREGAND); RETURN VALUE1 + VALUE2; END AGGREGATE,
		n := AGGREGATE(data, 1); RETURN VALUE1 + VALUE2; END AGGREGATE
	): 
	// finalisation
	CAST_AS_RATIONAL(mean) / CAST_AS_RATIONAL(n);
END OPERATOR;