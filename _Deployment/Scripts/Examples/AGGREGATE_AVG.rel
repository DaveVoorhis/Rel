OPERATOR AGGREGATE_AVERAGE(r ARRAY TUPLE {AGGREGAND INTEGER, AGGREGATION_SERIAL INTEGER}) RETURNS RATIONAL;
	// no initialisation per se
	RETURN WITH (
		// aggregation
		mean := AGGREGATE(r, AGGREGAND); RETURN VALUE1 + VALUE2; END AGGREGATE,
		n := AGGREGATE(r, 1); RETURN VALUE1 + VALUE2; END AGGREGATE
	): 
	// finalisation
	CAST_AS_RATIONAL(mean) / CAST_AS_RATIONAL(n);
END OPERATOR;